doctype html
html(lang='en')

	include _partials/_head.pug
	
	body
		include _partials/_mixins.pug
		+navbar("Contact")

		+header("Contact")

		.container
			.row
				.col-md-6.col-md-offset-3
					#contact-card.material-shadow
						h3.text-center How To Reach Us
						hr
						.name
							i.fa.fa-address-book-o.fa-3x
							h3 Bountiful Enterprises
						.contact-information
							table
								tbody
									tr
										td
											i.fa.fa-envelope
										td
											p Email
										td.right
											a(href="mailto:contact@bountifulenterprises.com") contact@bountifulenterprises.com
									tr
										td
											i.fa.fa-phone
										td
											p Phone Number
										td.right
											a(href="tel:4172762520") (417) 276-2520
									tr
										td
											i.fa.fa-fax
										td
											p Fax
										td.right
											p (417) 276-0000
									tr
										td
											i.fa.fa-clock-o
										td
											p Hours of Operation
										td.right
											p 8AM - 5PM CST
									tr
										td
											i.fa.fa-fax
										td
											p Address
										td.right
											p 18500 E 800 Humansville
												br
												| MO 65674
		#map-container
			.row
				.col-md-6.col-md-offset-3
					#map.material-shadow
						a(href="#map-modal" data-toggle='modal', data-target='#map-modal')
							img(src="images/contact-map.png")

		#map-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='map-modal')
			.modal-dialog(role='document')
				.modal-content
					.modal-header
						button.close(type='button', data-dismiss='modal', aria-label='Close')
							span(aria-hidden='true') Ã—
						h4.modal-title Modal title
					.modal-body
						| ...
					.modal-footer
						button.btn.btn-default(type='button', data-dismiss='modal') Close
						button.btn.btn-primary(type='button') Save changes

		
		include _partials/_footer.pug
		include _partials/_scripts.pug