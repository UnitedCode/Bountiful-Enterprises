-
	var home = "",
		services = "",
		projects = "",
		about = "", 
		contact = "",
		detailing = "",
		fabrication = "",
		shipping = "",
		erecting = "",
		active = "active";

mixin navbar(activePage)
	-
		activePage = activePage.toLowerCase();
		switch(activePage) {
			case "home":
				home = active;
				break;
			case "projects":
				projects = active;
				break;
			case "about":
				about = active;
				break;
			case "contact":
				contact = active;
				break;
			case "detailing":
				detailing = active;
				services = active;
				break;
			case "fabrication":
				fabrication = active;
				services = active;
				break;
			case "shipping":
				shipping = active;
				services = active;
				break;
			case "erecting":
				erecting = active;
				services = active;
				break;
			default:
				home = active;
		}
	nav.navbar.navbar-default.navbar-fixed-top.affix
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
					span.sr-only Toggle navigation
					| Menu 
					i.fa.fa-bars
				a.navbar-brand(href='index.html')
					img(src='img/small-logo.png')
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav
					li(class=home)
						a(href='index.html') Home
					li(class=services)
						a(href='#') Services
					li(class=projects)
						a(href='projects.html') Projects
				ul.nav.navbar-nav.navbar-right
					li(class=about)
						a(href='about.html') About
					li(class=contact)
						a(href='contact.html') Contact
